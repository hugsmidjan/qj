{
	"name": "@hugsmidjan_is/qj",
	"version": "3.2.2",
	"description": "Quick JavaScripts – Collection of useful miniature JavaScript helper functions.",
	"scripts": {
		"publishdist": "yarn run build  &&  npm publish dist",
		"prepublishOnly": "echo \"\nRun 'yarn run publishdist' to publish this package\n\n\"  && exit 1",
		"format": "eslint --fix  \"*.js\" \"build/*.js\" \"src/**/*.{js,ts,tsx}\"  &&  prettier --write \"*.md\" \"*.json\"  \"src/**/*.json\"",
		"build": "gulp build  &&  yarn run test",
		"dev": "yarn && gulp dev",
		"test": "ospec '__tests/**/*.js'",
		"test:dev": "yarn run test  &&  onchange '__tests/**/*.js' -f add,change -- ospec {{changed}}"
	},
	"dist_package_json": {
		"scripts": {}
	},
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/hugsmidjan/qj.git"
	},
	"author": "Hugsmiðjan ehf. (www.hugsmidjan.is)",
	"contributors": [
		"Már Örlygsson <mar@hugsmidjan.is>"
	],
	"engines": {
		"node": "^12",
		"yarn": ">=1.11",
		"npm": ">=6.4"
	},
	"license": "UNLICENCED",
	"devDependencies": {
		"gulp": "^4.0.2",
		"@hugsmidjan/gulp-rollup": "^0.3.17",
		"@hugsmidjan/hxmstyle": "^2.3.1",
		"@types/jsdom": "^12.2.4",
		"@types/ospec": "^4.0.2",
		"@typescript-eslint/eslint-plugin": "^2.6.1",
		"@typescript-eslint/parser": "^2.6.1",
		"del": "^5.1.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-plugin-destructuring": "^2.1.0",
		"eslint-plugin-prettier": "^3.1.1",
		"eslint": "6.6.0",
		"glob": "^7.1.5",
		"jsdom": "^15.1.1",
		"onchange": "^6.0.0",
		"ospec": "^4.0.0",
		"prettier": "^1.18.2",
		"rollup-plugin-buble": "^0.19.8",
		"rollup-plugin-typescript2": "^0.22.0",
		"rollup": "^1.17.0",
		"typescript": "^3.5.3"
	},
	"hxmstyle": {
		"options": {
			"typescript": true
		},
		"dependenciesAdded": [
			"@typescript-eslint/eslint-plugin",
			"@typescript-eslint/parser",
			"eslint",
			"eslint-config-prettier",
			"eslint-plugin-destructuring",
			"eslint-plugin-prettier",
			"prettier"
		]
	}
}
